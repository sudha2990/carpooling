<div class="row">
	<div class="col-md-12">
		<div class="row">
			<h2>Welcome to the Hackathon ride</h2>
		</div>
		<div class="row">
			<div class="col-md-10">
				<div class="row">
				  <div class="col-md-12">
				   Search For your rides Available<br\>
					<%= form_for @ride, :url => {:controller => "rides", :action => "search" }, :html => { :class => 'form-inline' } do |f| %>
					  <div class="form-group">
					  	<%= f.label "From" %>
    				    <%= f.text_field :source, class: "form-control" %>
					  </div>
					  <div class="form-group">
					  	<%= f.label "To" %>
					  	<%= f.text_field :destination, class: "form-control"%>
					  </div>
					  <%= f.button "Search", :class => ' btn btn-primary' %>
					<% end %>
					<br>
				  </div>
				</div>
			    <div>
				  <%= link_to "Display All Rides", rides_path, class: 'btn btn-primary btn-lg' %>
			    </div>
			</div>
			<div class="col-md-2">
				<div class="row">
					<h3>Travelling alone?</h3>
					<br>
					<div>
						<%= link_to "Offer a Ride", new_ride_path, class: 'btn btn-primary btn-lg' %>
					</div>
				</div>
			</div>
	</div>
</div>
