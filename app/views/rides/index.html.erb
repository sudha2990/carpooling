<%- model_class = Ride -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if @rides.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:source) %></th>
        <th><%= model_class.human_attribute_name(:destination) %></th>
        <th><%= model_class.human_attribute_name(:cost) %></th>
        <th><%= model_class.human_attribute_name(:start_date) %></th>
        <th><%= model_class.human_attribute_name(:arrival_time) %></th>
        <th><%= model_class.human_attribute_name(:departure_time) %></th>
        <th><%= model_class.human_attribute_name(:route) %></th>
        <th><%= model_class.human_attribute_name(:travellers) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @rides.each do |ride| %>
        <tr>
          <td><%= ride.source %></td>
          <td><%= ride.destination %></td>
          <td><%= ride.cost %></td>
          <td><%= ride.start_date %></td>
          <td><%= ride.arrival_time %></td>
          <td><%= ride.departure_time %></td>
          <td><%= ride.route %></td>
          <td><%= ride.travellers %></td>
          <td><%=l ride.created_at %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_ride_path(ride), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        ride_path(ride),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2> Sorry Could not find any rides with the search criterion </h2>
<% end %>

<%= link_to t('Add new Ride', :default => t("helpers.links.new")),
            new_ride_path,
            :class => 'btn btn-primary' %>
